<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:paddingBottom="23dp">

    <ImageView
        android:id="@+id/iv_close_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:padding="15dp"
        android:src="@drawable/close"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_close_button"
        android:orientation="vertical"
        android:paddingEnd="23dp"
        android:paddingStart="23dp">

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textSize="20dp"
            tools:text="@string/confirm_opening_new_discussion"/>

        <TextView
            android:id="@+id/tv_start_new_discussion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/ic_discuss"
            android:gravity="right"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textSize="20dp"
            tools:text="@string/google_street_view"/>

        <TextView
            android:id="@+id/tv_button_street_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/ic_pegman"
            android:gravity="right"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textSize="20dp"
            tools:text="@string/google_street_view"/>
    </LinearLayout>
</RelativeLayout>